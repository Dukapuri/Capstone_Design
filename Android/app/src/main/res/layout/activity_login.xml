<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg3_9"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#FAE2F3"
        android:theme="@style/Toolbar">

        <TextView
            android:id="@+id/gallery_title"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Shop"
            android:textSize="30dp"
            android:textColor="#F386FD"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lg_inbox"
        android:padding="10dp"
        android:layout_below="@id/login_title"
        android:layout_marginHorizontal="30dp"
        android:hint="ID"
        android:textColorHint="#D3D3D3"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lg_inbox"
        android:padding="10dp"
        android:layout_below="@id/et_id"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#D3D3D3"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:backgroundTint="#F386FD"
        android:text="Login" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
        android:textColor="#F386FD"
        android:backgroundTint="#fff"
        android:text="Sign Up" />

</RelativeLayout>